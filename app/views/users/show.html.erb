
<div class="h-full p-8">
    <div class="bg-white rounded-lg shadow-xl pb-8">
        <div class="w-full h-[250px]">
            <img src="https://vojislavd.com/ta-template-demo/assets/img/profile-background.jpg" class="w-full h-full rounded-tl-lg rounded-tr-lg">
        </div>
<div class="flex flex-col items-center -mt-20">
    <%= image_tag(current_user.profile.image.variant(resize: "160x160").processed, class: "w-40 border-4 border-white rounded-full") %>
    <div class="flex items-center space-x-2 mt-2">
        <p class="text-2xl"> <%= @user.profile.name %> </p>
        <span class="bg-blue-500 rounded-full p-1" title="Verified">
            <svg xmlns="http://www.w3.org/2000/svg" class="text-gray-100 h-2.5 w-2.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M5 13l4 4L19 7"></path>
            </svg>
        </span>
    </div>
    <p class="text-gray-700"> <%= @user.profile.location %> </p>
    <p class="text-sm text-blue-500">
        <% if @user.profile.link.present? %>
            <%= link_to @user.profile.link, @user.profile.link, target: "_blank" %>
        <% end %>
    </p>
</div>

    <div class="flex-1 flex  gap-2 items-center lg:items-end justify-end px-8 mt-2">
        <div class="flex items-center space-x-4 mt-2">
            <% if current_user == @user %>
                <div>
                </div>
            <%else %>
                <button class="flex items-center bg-blue-600 hover:bg-blue-700 text-gray-100 px-4 py-2 rounded text-sm space-x-2 transition duration-100">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"></path>
                    </svg>
                    <span>Follow</span>
                </button>
            <% end %>
        </div>
        <div class="flex justify-start">
            <%= render partial: 'shared/stats', locals: { user: @user } %>
        </div>

        <div class="flex mr-2 bg-blue-600 hover:bg-blue-700 text-gray-100 px-2 py-1 rounded text-sm space-x-2 transition duration-100">
            <%= link_to 'Edit Profile', edit_profile_path if user_signed_in? && current_user == @user %>
        </div>
 
        </div>
    </div>

            <div class="flex-1 bg-white rounded-lg shadow-xl mt-4 p-8">
                <h4 class="text-xl text-gray-900 font-bold">Recipes</h4>
                <div class="relative px-4">
                    <div class="absolute h-full border border-dashed border-opacity-20 border-secondary"></div>
                    <% if  @user.recipes.nil? %>
                        <p>There are no recipes yet.</p>
                    <% else %>
                        <% @user.recipes.each do |recipe| %>
                            <%= render recipe %>
                        <% end %>    
                    <% end %>
                </div>   
            </div>
        </div>
    </div>
</div>
