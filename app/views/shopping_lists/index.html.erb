<div>
    <header>
        <div class="mx-auto mb-10 max-w-7xl px-4 sm:px-6 lg:px-8">
            <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">
                Shopping Lists
            </h1>
        </div>
    </header>        
    <div class="flex m-4 flex-col gap-4">
        <% @shopping_lists.each do |shopping_list| %>
            <div class="flex gap-2 justify-between">
                <div class="flex bg-white shadow-md rounded-md p-4">
                <%= shopping_list.name %>
                <div class="flex justify-end ml-2">
                    <%= link_to "View", shopping_list, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-1 rounded" %>
                </div>
            </div>

            </div>
        <% end %>
    </div>
</div>
<%= link_to "Back", root_path, class: " justify-start mt-10 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %> 
