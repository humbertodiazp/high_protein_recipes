<!DOCTYPE html>
<html class="poppins h-full bg-white-100">
  <head>
      <%= render 'shared/head' %>
  </head>

  <body class='poppins bg-lm-1 text-dm-1 dark:bg-dm-1 dark:text-lm-1 h-screen w-screen' > 
    <%= render 'shared/navbar' %>


    <div class="min-h-full">
        <div class="py-10">
          <% if content_for?(:page_title) %>
          <header>
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
              <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">
                <%= yield(:page_title) %>
              </h1>
            </div>
          </header>
          <% end %>

          <main class="w-full pt-[60px] md:pt-[0px] md:pl-[240px]">
          
            <div class="w-full px-5 my-0 md:my-4">
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
              <div class=" grid-none lg:grid lg:grid-cols-[68%_32%]">
                <%= yield %>

                <%= render 'shared/rightbar'%>
              </div>

            </div>
          </main>

        </div>
      
  </body>
</html>
