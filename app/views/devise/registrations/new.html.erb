<div class="  bg-slate-100">
  <div class="flex justify-center items-center h-screen  bg-slate-100">

  <div class="flex-1 bg-cover bg-no-repeat h-screen min-h-full justify-end" style="background-image: url('<%= asset_path('wepik-export-20230918234754FDLE.jpeg') %>');">
    <!-- You can adjust the background image styles as needed -->
  </div>

  <div class="flex-1 min-h-full flex-col justify-center px-6 py-12 lg:px-8">

    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <div >
          <svg class="mx-auto h-10 w-auto" xmlns="http://www.w3.org/2000/svg" viewBox="1.4169999999999998 8.164 29.166000000000004 15.671999999999999">
            <path d="M23.184 8.164c-1.294 0-2.366 2.826-2.573 6.531h-9.22c-0.208-3.705-1.279-6.531-2.574-6.531H7.538C8.809 9.513 9.47 12.768 9.47 16c0 3.231-0.661 6.486-1.932 7.836h1.279c1.294 0 2.366-2.826 2.573-6.53h9.221c0.208 3.704 1.279 6.53 2.573 6.53 1.442 0 2.611-3.509 2.611-7.836C25.795 11.672 24.626 8.164 23.184 8.164zM28.407 9.47h-1.17c-0.413-0.824-0.909-1.306-1.442-1.306h-1.279c1.271 1.349 1.933 4.604 1.933 7.836 0 3.231-0.661 6.486-1.933 7.836h1.279c0.533 0 1.029-0.482 1.442-1.306h1.17c1.201 0 2.176-2.924 2.176-6.53S29.608 9.47 28.407 9.47zM3.593 9.47c-1.201 0-2.176 2.924-2.176 6.53s0.975 6.53 2.176 6.53c1.203 0 2.177-2.924 2.177-6.53S4.795 9.47 3.593 9.47zM3.593 17.306c-0.361 0-0.653-0.584-0.653-1.306 0-0.721 0.292-1.306 0.653-1.306S4.246 15.279 4.246 16C4.246 16.722 3.954 17.306 3.593 17.306zM6.205 8.164c-0.517 0-0.998 0.459-1.402 1.238 1.104 1.179 1.62 3.962 1.62 6.598 0 2.637-0.515 5.419-1.62 6.598 0.404 0.778 0.885 1.238 1.402 1.238 1.442 0 2.612-3.509 2.612-7.836C8.817 11.672 7.647 8.164 6.205 8.164z" fill="currentColor"></path>
          </svg>
      <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"> Sign Up </h2>
    </div>
    <div class="mt-1 sm:mx-auto sm:w-full sm:max-w-sm">
      <form class="space-y-6">
        <%# adddata: { turbo: false } so that turbo is ignored with devise, prevent errors caused by turbo  %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%=f.label "Full Name", class: label_class %>
          <div class="mt-2">
            <%= f.text_field :full_name, autofocus: true, autocomplete: "email", class:  input_class %>
          </div>
        </div>

        <div>
          <%=f.label "Email address", class: label_class %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:  input_class %>
          </div>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <%= f.label :password, class: label_class%>
          </div>

          <div class="mt-2">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:input_class %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class: label_class%>
          <div class="mt-2">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:input_class%>
          </div>
        </div>

        <div>
            <%= f.submit "Sign up", class: form_button_class %>  

        </div>
      <%end%>
            <div>
          <div class=" flex flex-center justify-between mt-2">
            <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
                <%= form_for "Login",
                  url:omniauth_authorize_path(resource_name, provider),
                  method: :post,
                  data: { turbo: "false" } do |f|%>
                  <%= f.submit "Login", type: "image", src: url_for("/assets/btn_google_dark_normal_ios.svg") %>
              <% end %>
            <% end %>
            <p class=" text-indigo-600 hover:text-indigo-500 flex w-full justify-start  px-3 py-2.5 text-sm font-semibold leading-6  p-2">Sign Up with Google</p>
          </div>
          <div class="mt-10">
            <%= link_to "Back to recipes", recipes_path, class: "text-gray-800 text-un" %>
          </div >
        </div>
      </form>
    </div>
  </div>
  </div>
</div>
<%end%>
<%#= render "devise/shared/links" %>