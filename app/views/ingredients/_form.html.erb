<%= turbo_frame_tag "ingredient_#{form.index}" do %>
  <%= form.hidden_field :id %>

  <div class="flex space-x-6 items-center">
    <div class="flex-grow">
      <%= form.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_field :description, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
    <div class="flex-none w-24">
      <%= form.label :quantity, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.select :quantity, options_for_select((1..10).to_a), class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
    <div class="flex-none w-24">
      <%= form.label :measurement, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.select :measurement, options_for_select(['cups', 'tbls', 'tspns', 'lbs', 'ozs']), class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
    <%= form.submit "Delete Ingredient", 
          formaction: ingredient_path(form.index, form.object.id), 
          formmethod: :delete, 
          formnovalidate: true, 
          data: { turbo_frame: "ingredient_#{form.index}" },
          class:"rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"%>
    <%= form.submit "Add ingredient", 
          formaction: ingredient_path(@recipe.ingredients.size), 
          formmethod: :post, 
          formnovalidate: true, 
          id: "add-ingredient", 
          class:"rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"%>
  </div>
<% end %>
