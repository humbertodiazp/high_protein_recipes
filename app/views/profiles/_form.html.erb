<%= form_with(model: profile, local: true) do |form| %>
    <% if profile.errors.any? %>
        <div style="color: red">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
        <ul>
            <% profile.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>
    <%= form.hidden_field :id %>
<form class="">
    <div class=" border-b border-gray-900/10 pb-12"> 
        <div class="mt-10 ">
            <div class="sm:col-span-4">
                <%= form.label "Name", class:"block text-lg font-bold leading-6 text-gray-900"%>
                <div class="mt-2">
                    <div >
                    <%= form.text_field :name, class:"flex rounded-lg shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md" %>
                    </div>
                </div>
            </div>

            <div class="sm:col-span-4">
                <%= form.label :location, class:"block text-sm font-bold leading-6 text-gray-900"%>
                <div class="mt-2">
                    <div >
                    <%= form.text_field :location, class:"flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md" %>
                    </div>
                </div>
            </div>

            <div class="sm:col-span-4">
                <%= form.label :link, class:"block text-sm font-bold leading-6 text-gray-900"%>
                <div class="mt-2">
                    <div >
                    <%= form.text_field :link, class:"flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md" %>
                    </div>
                </div>
            </div>                    

        
        <div class="col-span-full">
            <%= form.label :bio, class:"block text-sm font-bold leading-6 text-gray-900" %>
            <div class="mt-2">
                <%= form.text_area :bio, class: "block w-2/3  rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
        </div>
        <%# profile image %>
        <div class="col-span-full">
            <%= form.label :image, class:"block text-sm font-bold leading-6 text-gray-900"%>
            <div class="mt-2">
                <%= form.file_field :image, class:"block w-2/3 rounded-md border-0 px-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", 
                direct_upload: true, 
                data: { previews_target: "input", action: "change->previews#preview" } %>
            </div>
            <div class="">
                <p class="mt-3 text-sm leading-6 text-gray-600">Upload an image of your self!</p>
            </div>
        <div>
        <p class="text-3xl font-bold">Set color</p>

        <div class="flex gap-x-2">
            <% profile.color_list.each do |color| %>
            <%= form.radio_button :color, color, class: "w-7 h-7 rounded-full #{bg_colors[color.to_sym]}" %>
            <% end %>
        </div>
        <div>
            <%= form.submit "Submit", class: 'bg-emerald-600 hover:bg-emerald-500 text-white px-3 py-2 rounded-md duration-500 hover:cursor-pointer my-3' %>
        </div>
    </div>   
</form>
<% end %>